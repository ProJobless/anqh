<!doctype html>
<html lang="{{language}}">

<head>
	<meta charset="{{charset}}" />
	<meta http-equiv="Content-Type" content="text/html; charset={{charset}}" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<base href="{{base}}" />
	<title>{{title}}</title>
	<link rel="icon" type="image/png" href="{{base}}ui/favicon.png" />

	{{#styles}}{{{.}}}{{/styles}}
	{{#skins}}{{{.}}}{{/skins}}
	<link rel="stylesheet" type="text/css" href="{{base}}ui/site.css" />

	<script type="text/javascript" src="{{base}}js/head.min.js"></script>
	<!--<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&v=3"></script>-->

	{{{head}}}
</head>

<body id="{{id}}" class="{{_class}}">


	<!-- HEADER -->

	{{#notifications}}
	<section role="alert">
		{{{notification}}}
	</section>
	{{/notifications}}

	{{#has_header}}
	<nav id="visitor">
		{{{view_visitor}}}
	</nav><!-- #visitor -->

	<nav id="mainmenu" role="navigation">
		{{>header_menu}}
	</nav><!-- #mainmenu -->
	{{/has_header}}

	<!-- /HEADER -->


	{{{ad_top}}}


	<!-- CONTENT -->

	<section id="content">

		{{#has_title}}
		<header id="title">

			{{{tabs}}}

			<h2>{{title}}</h2>
			{{#subtitle}}<span class="subtitle">{{subtitle}}</span>{{/subtitle}}

			{{{actions}}}
			{{{share}}}

		</header><!-- #title -->
		{{/has_title}}

		{{>content}}

	</section>

	<!-- /CONTENT -->


	<!-- FOOTER -->

	{{#has_footer}}
	<footer id="footer">
		<div class="container grid12" role="complementary">

			{{>footer_menu}}
			{{{footer}}}

		</div>
		<p id="end" class="container grid12" role="contentinfo">
				{{statistics}}<br />
				{{#copyright}}Copyright &copy; {{from}}&ndash;{{to}} {{site}}{{/copyright}} - Powered by Anqh v{{version_anqh}} and Kohana v{{version_kohana}}
		</p>
	</footer>
	{{/has_footer}}

	<!-- /FOOTER -->


	<script>
	head.js(
		{ 'google-maps':     'http://maps.google.com/maps/api/js?sensor=false&callback=isNaN' }, // Use callback hack to initialize correctly
		{ 'jquery':          'http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js' },
		{ 'jquery-ui':       'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js' },
		{ 'jquery-markitup': '{{base}}js/jquery.markitup.js' },
		{ 'bbcode':          '{{base}}js/markitup.bbcode.js' },
		{ 'jquery-tools':    '{{base}}js/jquery.tools.min.js' },
		{ 'jquery-form':     '{{base}}js/jquery.form.js' },
		{ 'jquery-imgarea':  '{{base}}js/jquery.imgareaselect.js' },
		{ 'anqh':            '{{base}}js/anqh.js?2' },
		function() {
			<!-- GeoNames {{#geo}}-->
			Anqh.geoNamesURL  = '{{url}}';
			Anqh.geoNamesUser = '{{user}}';
			<!-- /GeoNames {{/geo}}-->
		}
	);
	</script>

	{{{foot}}}
  {{{profiler}}}

</body>

</html>
